<h3><%= link_to "Click here to see all pets","/pets" %></h3>

<h1>Update Pet Info</h1>
<%= form_tag "/pets/#{@pet_id}", method: :post do %>
<%= text_field_tag :image %>
  <%= text_field_tag :name %>
  <%= text_field_tag :approximate_age %>
  <%= text_field_tag :sex %>
  <%= submit_tag "Update Pet" %>
<% end %>
